<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<AnchorPane prefHeight="697.0" prefWidth="773.0" minHeight="300.0" minWidth="300.0"
            xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.hypernomicon.dialogs.RecordSelectDlgCtrlr">
  <TableView fx:id="tvFind" AnchorPane.bottomAnchor="28.0"
             AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
             AnchorPane.topAnchor="0.0" GridPane.rowIndex="1">
    <columns>
      <TableColumn maxWidth="32.0" minWidth="32.0"
                   prefWidth="32.0" resizable="false"/>
      <TableColumn prefWidth="500.0" text="Name"/>
      <TableColumn maxWidth="1000.0" prefWidth="100.0"
                   text="Year"/>
      <TableColumn maxWidth="2500.0" prefWidth="250.0"
                   text="Additional Info"/>
    </columns>
    <columnResizePolicy>
      <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
    </columnResizePolicy>
  </TableView>
  <GridPane hgap="4.0" layoutX="35.0" layoutY="244.0"
            prefHeight="26.0" prefWidth="314.0" AnchorPane.bottomAnchor="0.0"
            AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
    <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES"
                         minWidth="10.0" prefWidth="100.0"/>
      <ColumnConstraints hgrow="SOMETIMES"
                         minWidth="10.0" prefWidth="100.0"/>
    </columnConstraints>
    <rowConstraints>
      <RowConstraints minHeight="10.0"
                      prefHeight="30.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <Button fx:id="btnOK" defaultButton="true"
            minWidth="60.0" mnemonicParsing="false" onAction="#btnOkClick"
            text="OK" GridPane.halignment="RIGHT"/>
    <Button fx:id="btnCancel" cancelButton="true"
            minWidth="60.0" mnemonicParsing="false"
            onAction="#btnCancelClick" text="Cancel"
            GridPane.columnIndex="1"/>
  </GridPane>
</AnchorPane>
