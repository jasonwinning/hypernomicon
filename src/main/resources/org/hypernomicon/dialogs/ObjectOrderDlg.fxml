<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane minHeight="300.0" minWidth="300.0" prefHeight="500.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.hypernomicon.dialogs.ObjectOrderDlgCtrlr">
   <BorderPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
      <center>
        <TableView fx:id="tv">
          <columns>
            <TableColumn prefWidth="75.0" text="C1" />
            <TableColumn prefWidth="75.0" text="C2" />
          </columns>
          <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
          </columnResizePolicy>
        </TableView>
      </center>
      <bottom>
         <BorderPane BorderPane.alignment="CENTER">
            <left>
              <HBox spacing="4.0" BorderPane.alignment="CENTER">
                <padding>
                  <Insets bottom="4.0" left="4.0" right="4.0" top="4.0"/>
                </padding>
                <Button fx:id="btnMoveUp" maxHeight="25.0" minHeight="25.0" mnemonicParsing="false" prefHeight="25.0">
                  <graphic>
                    <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                      <Image url="@../resources/images/triangle-up.png"/>
                    </ImageView>
                  </graphic>
                </Button>
                <Button fx:id="btnMoveDown" maxHeight="25.0" minHeight="25.0" mnemonicParsing="false" prefHeight="25.0">
                  <graphic>
                    <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                      <Image url="@../resources/images/triangle-down.png"/>
                    </ImageView>
                  </graphic>
                </Button>
              </HBox>
            </left>
            <right>
              <HBox BorderPane.alignment="CENTER">
                <padding>
                  <Insets bottom="4.0" left="4.0" right="4.0" top="4.0"/>
                </padding>
                <Button fx:id="btnOK" defaultButton="true" maxHeight="25.0" minHeight="25.0" mnemonicParsing="false"
                        onAction="#btnOkClick" prefHeight="25.0" prefWidth="60.0" text="OK"/>
              </HBox>
            </right>
         </BorderPane>
      </bottom>
   </BorderPane>
</AnchorPane>
